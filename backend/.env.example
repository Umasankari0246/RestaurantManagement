# Backend config
FLASK_ENV=development
FLASK_DEBUG=1

# SQLite DB file path (relative to backend/)
DATABASE_URL=sqlite:///restaurant.db

# CORS (comma separated). Use * for dev.
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# MongoDB connection string (used by users, orders, reservations, feedback, etc.)
MONGO_URI=mongodb://127.0.0.1:27017/restaurant_db
# Optional database name override (otherwise derived from MONGO_URI)
# MONGO_DB_NAME=restaurant_db

# API base path
API_PREFIX=/api
